{
    "name": "Jigsaw_BERT",
    "batch_size": 256,
    "accumulate_grad_batches": 1,
    "loss": "prop_loss",
    "arch": {
        "type": "BERT",
        "args": {
            "num_classes": 6,
            "model_type": "unitary/toxic-bert",
            "model_name": "BertForSequenceClassification",
            "tokenizer_name": "BertTokenizer"
        }
    },
    "dataset": {
        "train": {
            "type": "PropDataset",
            "pkl_path": "data/rtp_500/split_1_0.5_0.1_0.2_0.2/train.pkl"
        },
        "val": {
            "type": "PropDataset",
            "pkl_path": "data/rtp_500/split_1_0.5_0.1_0.2_0.2/val.pkl"
        },
        "cal": {
            "type": "ClassificationDataset",
            "pkl_path": "data/rtp_500/split_1_0.5_0.1_0.2_0.2/cal.pkl"
        },
        "test": {
            "type": "ClassificationDataset",
            "pkl_path": "data/rtp_500/split_1_0.5_0.1_0.2_0.2/test.pkl"
        },
        "args": {
            "score_name": "toxicity",
            "threshold": 0.5,
            "max_samples": 500
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-05
        }
    }
}